{
    "manifest_version": 2,
    "version": "0.4.1",
    "name": "Auto Cookie Optout",
    "icons": {
        "96": "icon96.svg"
    },
    "description": "Skip cookie walls! Automatically opt out of optional cookies on supported websites.",
    "background": {
        "scripts": [
            "src/background/clickerTriggerers.ts",
            "src/background/misc.ts"
        ]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/listener.ts"]
        },
        {
            "matches": ["*://consent.youtube.com/*"],
            "js": ["src/clickers/google.ts"]
        },
        {
            "matches": [
                "*://www.google.com/*",
                "*://www.google.be/*",
                "*://www.google.co.uk/*",
                "*://www.google.fr/*",
                "*://www.google.nl/*",
                "*://images.google.com/*",
                "*://images.google.be/*",
                "*://images.google.co.uk/*",
                "*://images.google.fr/*",
                "*://images.google.nl/*",
                "*://consent.google.com/*",
                "*://consent.google.be/*",
                "*://consent.google.co.uk/*",
                "*://consent.google.fr/*",
                "*://consent.google.nl/*"
            ],
            "js": ["src/clickers/google.ts"]
        },
        {
            "matches": ["*://consent.yahoo.com/*"],
            "js": ["src/clickers/yahoo.ts"]
        },
        {
            "matches": ["*://consent-pref.trustarc.com/*"],
            "js": ["src/clickers/trustarc.ts"],
            "all_frames": true
        },
        {
            "matches": ["*://gdpr-consent-tool.privacymanager.io/*"],
            "js": ["src/clickers/liveramp.ts"],
            "all_frames": true
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{d967193f-41e8-4cc7-8811-3278a9f62ad4}"
        }
    }
}