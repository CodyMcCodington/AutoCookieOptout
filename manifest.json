{
    "manifest_version": 2,
    "version": "0.2",
    "name": "Auto Cookie Optout",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["*://consent.youtube.com/*"],
            "js": ["clickers/google.js"]
        },
        {
            "matches": [
                "*://www.google.com/*",
                "*://www.google.be/*",
                "*://www.google.co.uk/*",
                "*://www.google.fr/*",
                "*://www.google.nl/*",
                "*://images.google.com/*",
                "*://images.google.be/*",
                "*://images.google.co.uk/*",
                "*://images.google.fr/*",
                "*://images.google.nl/*",
                "*://consent.google.com/*",
                "*://consent.google.be/*",
                "*://consent.google.co.uk/*",
                "*://consent.google.fr/*",
                "*://consent.google.nl/*"
            ],
            "js": ["clickers/google.js"]
        },
        {
            "matches": ["*://consent.yahoo.com/*"],
            "js": ["clickers/yahoo.js"]
        }
    ]
}